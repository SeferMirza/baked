<Project Sdk="Microsoft.NET.Sdk.Web">
    
  <ItemGroup>
    <Content Include="Core\ApplicationPhysical.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
    
  <ItemGroup>
    <EmbeddedResource Include="Core\ApplicationEmbedded.txt" />
  </ItemGroup>
    
  <ItemGroup>
    <ProjectReference Include="..\..\..\src\recipe\Baked.Recipe.Service.Application\Baked.Recipe.Service.Application.csproj" />
    <ProjectReference Include="..\Baked.Test.Recipe.Service\Baked.Test.Recipe.Service.csproj" />
  </ItemGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="Baked.Test.Recipe.Service.Test" />
  </ItemGroup>

  <Target Name="Bake" AfterTargets="AfterBuild">
    <Exec Command="dotnet run $(ProjectPath) --no-build --no-start --bake -c $(Configuration)" Condition="'$(OS)' != 'Unix'" />
    <Exec Command="dotnet $(TargetPath) --no-build --no-start --bake -c $(Configuration)" Condition="'$(OS)' == 'Unix'" />
  </Target>

  <Target Name="CopyBakedFiles" AfterTargets="Publish">
    <ItemGroup>
        <GeneratedFilest Include="$(TargetDir)\$(ASPNETCORE_ENVIRONMENT)\*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(GeneratedFilest)" DestinationFolder="$(PublishDir)\$(ASPNETCORE_ENVIRONMENT)" SkipUnchangedFiles="true" />
  </Target>

</Project>
